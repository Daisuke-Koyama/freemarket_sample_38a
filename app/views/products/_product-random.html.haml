-number = 0
- @products.sort_by{rand}.first(4).each do |product|
  = link_to "/products/show" do
    .category__items--each
      .category__items--each__img
        = image_tag product.images[0].first_image.url
      .category__items--each__detail
        .category__items--each__detail__top-name
          = product.name
        .category__items--each__detail__middle.clearfix
          .category__items--each__detail__middle--price
            ¥
            = number_with_delimiter(product.price)
          .category__items--each__detail__middle--heart.clearfix
            .category__items--each__detail__middle--heart__mark
              %i.far.fa-heart.small
            .category__items--each__detail__middle--heart__num
              2
        .category__items--each__detail__bottom-tax
          (税込)
